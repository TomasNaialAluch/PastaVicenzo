rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Permitir leer y escribir solo si el usuario está autenticado y es dueño del documento
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colección de pedidos
    match /orders/{orderId} {
      // Permitir leer y escribir solo si el usuario está autenticado y es dueño del pedido
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      // Permitir crear pedidos si el usuario está autenticado y el userId coincide
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas para la colección de direcciones
    match /addresses/{addressId} {
      // Permitir leer y escribir solo si el usuario está autenticado y es dueño de la dirección
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      // Permitir crear direcciones si el usuario está autenticado y el userId coincide
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Reglas por defecto (bloquear todo lo demás por seguridad)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

